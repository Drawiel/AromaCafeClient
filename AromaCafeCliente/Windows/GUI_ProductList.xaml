<Window x:Class="AromaCafeCliente.Windows.GUI_ProductList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AromaCafeCliente.Windows"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="GUI_ProductList" Height="1080" Width="1920" WindowStyle="None" ResizeMode="NoResize" WindowState="Maximized">


    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Multimedia/GUI_BuscarProducto.png"/>
    </Window.Background>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="323*"/>
            <ColumnDefinition Width="1597*"/>
        </Grid.ColumnDefinitions>


        <Grid
        Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="373*"/>
                <RowDefinition Height="85*"/>
                <RowDefinition Height="85*"/>
                <RowDefinition Height="85*"/>
                <RowDefinition Height="85*"/>
                <RowDefinition Height="291*"/>
                <RowDefinition Height="85*"/>
            </Grid.RowDefinitions>

            <Grid
        Grid.Row="1"
        HorizontalAlignment="Stretch" 
        VerticalAlignment="Stretch" 
        Height="67"
        Width="258"
        Background="Transparent">
                <Button
            Grid.Row="1"
            x:Name="Home" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Height="67"
            Width="258">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Fondo normal -->
                                <Border x:Name="ButtonBackground" Background="Transparent" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" VerticalAlignment="Top" HorizontalAlignment="Left" />
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                            <ControlTemplate.Triggers>
                                <!-- Cambiar fondo cuando el mouse esté encima -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBackground" Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="pack://application:,,,/Multimedia/HoverHome.png" Stretch="UniformToFill"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
            </Grid>

            <Grid
        Grid.Row="2"
        HorizontalAlignment="Stretch" 
        VerticalAlignment="Stretch" 
        Height="67"
        Width="258"
        Background="Transparent">
                <Button
            Grid.Row="1"
            x:Name="Users" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Height="67"
            Width="258">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Fondo normal -->
                                <Border x:Name="ButtonBackground" Background="Transparent" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" VerticalAlignment="Top" HorizontalAlignment="Left" />
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                            <ControlTemplate.Triggers>
                                <!-- Cambiar fondo cuando el mouse esté encima -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBackground" Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="pack://application:,,,/Multimedia/HoverUsers.png" Stretch="UniformToFill"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
            </Grid>

            <Grid
        Grid.Row="3"
        HorizontalAlignment="Stretch" 
        VerticalAlignment="Stretch" 
        Height="67"
        Width="258"
        Background="Transparent">
                <Button
            Grid.Row="1"
            x:Name="Report" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Height="67"
            Width="258">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Fondo normal -->
                                <Border x:Name="ButtonBackground" Background="Transparent" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" VerticalAlignment="Top" HorizontalAlignment="Left" />
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                            <ControlTemplate.Triggers>
                                <!-- Cambiar fondo cuando el mouse esté encima -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBackground" Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="pack://application:,,,/Multimedia/HoverReports.png" Stretch="UniformToFill"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
            </Grid>

            <Grid
        Grid.Row="4"
        HorizontalAlignment="Stretch" 
        VerticalAlignment="Stretch" 
        Height="67"
        Width="258"
        Background="Transparent">
                <Button
            Grid.Row="1"
            x:Name="Products" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Height="67"
            Width="258">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Fondo normal -->
                                <Border x:Name="ButtonBackground" Background="Transparent" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" VerticalAlignment="Top" HorizontalAlignment="Left" />
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                            <ControlTemplate.Triggers>
                                <!-- Cambiar fondo cuando el mouse esté encima -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBackground" Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="pack://application:,,,/Multimedia/HoverProducts.png" Stretch="UniformToFill"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
            </Grid>


            <Grid
        Grid.Row="6"
        HorizontalAlignment="Stretch" 
        VerticalAlignment="Stretch" 
        Height="67"
        Width="258"
        Background="Transparent">
                <Button
            Grid.Row="1"
            x:Name="LogOut" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Height="67"
            Width="258">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Fondo normal -->
                                <Border x:Name="ButtonBackground" Background="Transparent" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" VerticalAlignment="Top" HorizontalAlignment="Left" />
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                            <ControlTemplate.Triggers>
                                <!-- Cambiar fondo cuando el mouse esté encima -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBackground" Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="pack://application:,,,/Multimedia/HoverLogOut.png" Stretch="UniformToFill"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
            </Grid>


        </Grid>

        <Viewbox
            Grid.Column="1">

            <Grid
            Width="1597"
            Height="1080"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">


                <Grid
                    Width="1530"
                    Height="955"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left" Margin="57,49,0,0">

                    <Button 
                        x:Name="btnAddProduct"
                        HorizontalAlignment="Left" 
                        Margin="1404,88,0,0" 
                        VerticalAlignment="Top" 
                        Height="48" 
                        Width="65">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <!-- Fondo normal -->
                                    <Border x:Name="ButtonBackground" Background="Transparent" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" VerticalAlignment="Top" HorizontalAlignment="Left" />
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!-- Cambiar fondo cuando el mouse esté encima -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ButtonBackground" Property="Background">
                                            <Setter.Value>
                                                <ImageBrush ImageSource="pack://application:,,,/Multimedia/HoverAddProduct.png" Stretch="UniformToFill"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>
                    <Button 
                        x:Name="btnBack"
                        HorizontalAlignment="Left" 
                        Margin="10,88,0,0" 
                        VerticalAlignment="Top" 
                        Height="48" 
                        Width="65">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <!-- Fondo normal -->
                                    <Border x:Name="ButtonBackground" Background="Transparent" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" VerticalAlignment="Top" HorizontalAlignment="Left" />
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!-- Cambiar fondo cuando el mouse esté encima -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ButtonBackground" Property="Background">
                                            <Setter.Value>
                                                <ImageBrush ImageSource="pack://application:,,,/Multimedia/HoverBack.png" Stretch="UniformToFill"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>
                    <TextBox 
                         materialDesign:HintAssist.HelperTextFontSize="80"
                         materialDesign:HintAssist.Hint="Buscar"
                         FontFamily="pack://application:,,,/Font/#Architects Daughter"
                         TextWrapping="Wrap" 
                         HorizontalAlignment="Left" 
                         Margin="204,83,0,0" 
                         FontSize="38"
                         VerticalAlignment="Top" 
                         Width="1155" 
                         Height="61"/>


                </Grid>

                <Grid Margin="162,227,163,92">

                    <DataGrid 
                        x:Name="DataGridProducts"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      ItemsSource="{Binding Products}"
                      ScrollViewer.CanContentScroll="True"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ColumnHeaderHeight="61" 
                        GridLinesVisibility="All"
                        Background="Transparent"
                      Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="" Binding="{Binding Name}" Width="400" />
                            <DataGridTextColumn Header="" Binding="{Binding TypeOfProduct}" Width="400" />
                            <DataGridTextColumn Header="" Binding="{Binding Code}" Width="270" />
                            <DataGridTextColumn Header="" Binding="{Binding Units}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

            </Grid>
        </Viewbox>

    </Grid>
    </Window>
